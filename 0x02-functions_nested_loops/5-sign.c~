#include "main.h"
/**
 *  print_sign - checks for sign of n and print.
 *
 * @n: The variable for the argument
 *
 * Return: 1 if ! 0, 0 if = 0
 */

int print_sign(int n)
{
if (n < 0)
{
_putchar("-");
return (-1);
}
else if (n > 0)
{
_putchar("+");
return (1);
}
else
{
_putchar("0")
return (0);
}
}
